@model BugTrackerWithLayout.Models.Bug

@{
    ViewBag.Title = "Çözüm Ekle";
}

<h2>Çözüm Ekle: @Model.Title</h2>

@using (Html.BeginForm("AddSolution", "Bug", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <label>Mevcut Açıklama:</label>
        <p>@Model.Description</p>
    </div>

    <div class="form-group">
        <label>Çözüm:</label>
        <textarea name="solution" class="form-control" rows="4" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
}
