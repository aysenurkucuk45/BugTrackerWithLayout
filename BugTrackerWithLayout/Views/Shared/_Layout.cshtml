@using System.Web
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Hata Takip Uygulaması</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- ✅ Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- ✅ ParamQuery Grid (isteğe bağlı) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/paramquery@7.3.0/pqgrid.min.css" />

    <link rel="stylesheet" href="~/Content/Site.css" />
</head>
<body class="@((Session["Theme"] ?? "light").ToString())">
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" href="@Url.Action("About", "Home")">Hata Takip ve Yönetim Portalı</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    @if (!Request.IsAuthenticated && !Request.Url.AbsolutePath.ToLower().Contains("/account/register"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Giriş Yap", "Login", "Account", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Kayıt Ol", "Register", "Account", null, new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Hesabım
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="@Url.Action("UserProfile", "Account")">Profilim</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("MyBugs", "Bug")">Hatalarım</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Bug")">Bütün Hataları Listele</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Create", "Bug")">Yeni Hata Ekle</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">Çıkış Yap</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top: 80px;">
        @RenderBody()
        <hr />
        <footer>
            &copy; @DateTime.Now.Year - Ayşenur
        </footer>
    </div>

    <!-- ✅ Bootstrap JS (bundle dahil!) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/paramquery@7.3.0/pqgrid.min.js"></script>
</body>
</html>
